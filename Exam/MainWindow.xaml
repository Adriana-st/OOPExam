<Window x:Class="Exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Filter" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Robot List" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Grid.Column="1"/>
        <Label Content="Robot Details" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Grid.Column="2"/>
        <RadioButton x:Name="rbtnAll" Content="ALL ROBOTS" HorizontalAlignment="Left" Margin="10,35,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbtnHousehold" Content="HOUSEHOLD" HorizontalAlignment="Left" Margin="10,143,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbtnDelivery" Content="DELIVERY" HorizontalAlignment="Left" Margin="10,249,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Image Margin="166,222,44,81" Grid.Row="1" Source="/delivery-robot.png" Stretch="Fill"/>
        <Image Margin="166,107,32,186" Grid.Row="1" Source="/household-robot.png" Stretch="Fill"/>
        <Image Margin="166,10,32,278" Source="/robot.png" Stretch="Fill" Grid.Row="1"/>
        <ListBox x:Name="lbxRobots" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10" SelectionChanged="lbxRobots_SelectionChanged"/>
        <TextBlock x:Name="tblkRobotDetails" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="295" Width="247" Margin="0,14,0,0"/>
        <Button x:Name="btnCharge" Grid.Column="2" Content="Charge" HorizontalAlignment="Left" Margin="83,327,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="96" Background="#FF5F06AD" BorderBrush="#FF2C0052" Foreground="White" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.436"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
